<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <com.rzq.custom.msg.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp" />


    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_head"
        android:background="@drawable/bs_ltk"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/iv_head"
        android:scaleType="centerInside"
        android:visibility="visible" />


    <RelativeLayout
        android:id="@+id/rl_resend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/tv_msg"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/iv_resend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:indeterminateTint="@color/purple"
            android:padding="15dp" />

        <TextView
            android:id="@+id/tv_resend"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/fssb"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>