<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/qmui_config_color_10_pure_black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="@dimen/defultSize2" />

        <Button
            android:id="@+id/bt_consult"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/button_blue_fill"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="@string/select"
            android:textColor="@color/white"
            android:textSize="@dimen/defaultSize" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_kefu" />
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="15dp"
            android:visibility="gone"
            android:layout_height="15dp"
            android:gravity="center"
            android:background="@drawable/red_shape"
            android:text="99"
            android:textColor="@color/white"
            android:maxLength="2"
            android:textSize="@dimen/defaultSize_ss"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15"
            tools:ignore="MissingConstraints" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>